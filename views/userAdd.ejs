    <div class="row g-5">
      

      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Add a User</h4>
        <form action="/useradd" method="POST" class="needs-validation" novalidate>
          <div class="row g-3">

            <div class="col-sm-6">
              <label for="unitNumber" class="form-label">Unit Number</label>
              <input type="text" name="unitNumber" class="form-control" id="unitNumber" placeholder="" required>
              <div class="invalid-feedback">
                Unit number is required
              </div>
            </div>

            <div class="col-sm-6">
              <label for="buildingNumber" class="form-label">Building Number</label>
              <input type="text" name="buildingNumber" class="form-control" id="buildingNumber" placeholder="" required>
              <div class="invalid-feedback">
                Please enter a building number
              </div>
            </div>

            <div class="col-sm-6">
              <label for="firstName" class="form-label">First name</label>
              <input type="text" name="firstName" class="form-control" id="firstName" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>

            </div>
            <div class="col-sm-6">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" name="lastName" class="form-control" id="lastName" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="spouseName" class="form-label">Spouse name <span class="text-muted">(Optional)</span></label>
              <input type="text" name="spouseName"class="form-control" id="spouseName" placeholder="" value="">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="userName" class="form-label">Username </label>
              <div class="input-group has-validation">
                <span class="input-group-text">@</span>
                <input type="text" name="userName" class="form-control" id="userName" placeholder="U + unit number" required>
              <div class="invalid-feedback">
                  User name is required.
                </div>
              </div>
            </div>

            

            <div class="col-12">
              <label for="password" class="form-label">Password</label>
              <input type="text" name="password"  class="form-control" id="password" placeholder="" required>
              <div class="invalid-feedback">
                Password number is required
              </div>
            </div>

            <hr class="my-4">
            <h4 class="mb-3">Contact Information</h4>

            <div class="col-12">
              <label for="phone" class="form-label">Phone number</label>
              <input type="tel" name="phone" pattern="[0-9]{10}" class="form-control" id="phone" placeholder="" required>
              <div class="invalid-feedback">
                Phone number is required
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
              <input type="email" name="email" class="form-control" id="email" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-12">
              <label for="address" class="form-label">Address</label>
              <input type="text" name="address" value="1030 W 112th Ave."class="form-control" id="address" placeholder="" required>
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>

            <div class="col-12">
              <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
              <input type="text" name="address2"class="form-control" id="address2" placeholder="Apartment or suite">
            </div>

            
            <div class="col-md-3">
              <label for="city" class="form-label">City</label>
              <input type="text" name="city" value="Northglenn" class="form-control" id="city" placeholder="" required>
              <div class="invalid-feedback">
                City required.
              </div>
            </div>


            <div class="col-md-3">
              <label for="state" class="form-label">State</label>
              <input type="text" name="state" value="Colorado" class="form-control" id="state" placeholder="" required>
              <div class="invalid-feedback">
                State required.
              </div>
            </div>

            <div class="col-md-3 mb-3">
              <label for="zip" class="form-label">Zip</label>
              <input type="text" name="zip" value="80234" class="form-control" id="zip" placeholder="" required>
              <div class="invalid-feedback">
                Zip code required.
              </div>
            </div>
          </div>

         

          <div class="form-check">
            <input type="checkbox" name="remoteOwner" value='true' class="form-check-input" id="remoteOwner">
            <label class="form-check-label" for="remoteOwner">Owner lives at different address</label>
          </div>

      
          <hr class="my-4">

          <h4 class="mb-3">Access</h4>

          <div class="my-3">
            <div class="form-check">
              <input id="owner" name="access" value="owner" type="radio" class="form-check-input" checked required>
              <label class="form-check-label" for="owner">Owner</label>
            </div>
            <div class="form-check">
              <input id="board" name="access" value="board" type="radio" class="form-check-input" required>
              <label class="form-check-label" for="board">Board</label>
            </div>
            <div class="form-check">
              <input id="manager" name="access"value="manager" type="radio" class="form-check-input" required>
              <label class="form-check-label" for="manager">Manager</label>
            </div>
            <div class="form-check">
              <input id="admin" name="access" value="admin" type="radio" class="form-check-input" required>
              <label class="form-check-label" for="admin">Admin</label>
            </div>
          </div>

          
          <hr class="my-4">

          <button class="w-50 btn btn-primary btn-lg" type="submit">Add User</button>
        </form>
      </div>
